<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<img src="<%= @post.post_image %>" alt="">
<button type="button" name="button"><%= link_to @follow_status, toggle_follow_post_path(user_id: @post.user_id), class: @follow_status %></button>
<button type="button" name="button"><%= link_to @like_status, toggle_like_post_url(post_id: @post), class: @like_status %></button>
<button type="button" name="button"><%= link_to 'Edit', edit_post_path(@post), class: "Edit" %></button>
<button type="button" name="button"><%= link_to 'Back', posts_path, class: "Back" %></button>
